<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_decryption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1eca3b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cortez.cryptomask.TextDecryptionActivity">

    <TextView
        android:id="@+id/DecryptInstructionMessage"
        android:text="Please Select Cipher Text to un-mask by ID number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/rowtoDecrypt"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:ems="10"
        android:background="#999999ff"
        android:layout_below="@+id/DecryptInstructionMessage"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:inputType="number" />

    <Button
        android:text="Un-mask"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FF33B5E5"
        android:id="@+id/searchButt" />

    <ListView
        android:id="@+id/thelistlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rowtoDecrypt"
        android:layout_marginTop="27dp" />

</LinearLayout>
