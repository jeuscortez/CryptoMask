<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#072059"
    tools:context="com.example.cortez.cryptomask.HomeActivity">

    <Button
        android:text="Secure Text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/TextFunctions"
        android:textColor="#000000"
        android:background="#FF33B5E5"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageFunctions" />

    <Button
        android:text="Secure Image"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/ImageFunctions"
        android:textColor="#000000"
        android:background="#FF33B5E5"
        android:layout_below="@+id/TextFunctions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="18sp"
        />

    <Button
        android:text="Secret Message"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:id="@+id/MessagingFunctions"
        android:background="#FF33B5E5"
        android:textSize="18sp"
        android:layout_below="@+id/ImageFunctions"
        android:layout_alignLeft="@+id/ImageFunctions"
        android:layout_alignStart="@+id/ImageFunctions" />

    <Button
        android:text="Change Password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:id="@+id/UpdatePasswordFunctions"
        android:background="#FF33B5E5"
        android:textSize="18sp"
        android:layout_below="@+id/MessagingFunctions"
        android:layout_alignLeft="@+id/ImageFunctions"
        android:layout_alignStart="@id/ImageFunctions"/>

</RelativeLayout>
