<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1eca3b"
    tools:context="com.example.cortez.cryptomask.RSADecryptionResultActivity">

    <TextView
        android:id="@+id/MessageTextViewForDecryption"
        android:layout_marginTop="15dp"
        android:text="Decrypted Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="normal|bold"
        android:layout_below="@+id/returntoMainfromRSAencryptionresult"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/MessageTextViewForDecryption"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RSADecryptionResult"
        android:textSize="18dp"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returntoMainfromRSADecryptionresult"
        android:text="Main Menu"
        android:layout_below="@+id/RSADecryptionResult"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
