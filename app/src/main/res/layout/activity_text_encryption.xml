<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_encryption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1eca3b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cortez.cryptomask.TextEncryptionActivity">

    <TextView
        android:text="Please enter text you wish to encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Directions"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:inputType="text"
        android:gravity="top|left"
        android:background="#999999ff"
        android:ems="10"
        android:id="@+id/UserInput"
        android:layout_below="@+id/Directions"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/Directions"
        android:layout_alignEnd="@+id/Directions"
        android:layout_alignLeft="@+id/Directions"
        android:layout_alignStart="@+id/Directions" />

    <Button
        android:text="Encrypt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#FF33B5E5"
        android:id="@+id/StartTextEncryption"
        android:layout_below="@+id/UserInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>
