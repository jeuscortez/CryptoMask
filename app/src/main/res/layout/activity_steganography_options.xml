<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072059"
    tools:context="com.example.cortez.cryptomask.SteganographyOptionsActivity">


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Encode Message"
        android:background="#33e5d9"
        android:id="@+id/SteganographyEncodeOption"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SteganographyEncodeOption"
        android:layout_marginTop="103dp"
        android:background="#33e5d9"
        android:text="Decode Message"
        android:id="@+id/SteganographyDecodeption"
        />



</RelativeLayout>
